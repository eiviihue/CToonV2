{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn -DskipTests clean package"
  },
  "deploy": {
    "startCommand": "java -jar target/dependency/webapp-runner.jar --port $PORT target/*.war",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "JAVA_VERSION": "17",
    "PORT": "8080"
  }
}